    <!-- Contenido principal -->
    <main>
        <!-- Banner de usuario -->
        <div id="account-banner">
            <img src="/img/banneruser.png" alt="Banner de Usuario">
            <p id="welcome-message">BIENVENIDO/A [NOMBRE USUARIO]</p>
