    <script src="/js/authManager.js"></script>
    <script src="/js/global.js"></script>
    <script>
        // Funci√≥n para poblar el nombre del usuario desde sessionStorage
        function loadUserName() {
            let user = JSON.parse(sessionStorage.getItem('user')) || {};
            let userName = user.firstName || "Usuario"; // Nombre de prueba si no existe
            document.getElementById('welcome-message').innerText = `BIENVENIDO/A ${userName.toUpperCase()}`;
        }

        // Funci√≥n para eliminar cuenta de usuario
        async function deleteAccount() {
            let user = JSON.parse(sessionStorage.getItem('user')) || {};
            let userId = user.userId;

            if (!userId) {
                showPopup("‚ö†Ô∏è No se pudo identificar al usuario.");
                return;
            }

            const confirmDelete = confirm("¬øEst√°s seguro de que deseas eliminar tu cuenta? Esta acci√≥n no se puede deshacer.");
            if (!confirmDelete) return;

            try {
                const response = await fetch(`/users/delete/${userId}`, {
                    method: 'DELETE'
                });
                const result = await response.json();

                if (response.ok) {
                    showPopup("‚úÖ Cuenta eliminada correctamente.");
                    sessionStorage.removeItem('user');
                    window.location.href = "/";
                } else {
                    throw new Error(result.error || "Error al eliminar la cuenta.");
                }
            } catch (error) {
                console.error("‚ö†Ô∏è Error al eliminar cuenta:", error);
                showPopup("‚ö†Ô∏è Hubo un error al eliminar la cuenta. Int√©ntalo nuevamente.");
            }
        }
        
        // Ejecutar la funci√≥n al cargar la vista
        document.addEventListener("DOMContentLoaded", function() {
            loadUserName();
            document.getElementById("logout").addEventListener("click", logoutUser);
            document.getElementById("delete-account").addEventListener("click", deleteAccount);
        });
    </script>
</body>
