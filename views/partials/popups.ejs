<!-- Modal Genérico -->
<div id="globalPopup" class="popup-overlay" aria-hidden="true">
    <div class="popup-content">
        <!-- Imagen de Alerta -->
        <img id="popupImage" src="/img/alert.png" alt="Alerta" class="popup-image">

        <!-- Botón de Cierre -->
        <button class="close-btn" onclick="closePopup()" aria-label="Cerrar popup">×</button>

        <!-- Contenido Dinámico -->
        <div id="popupMessageContent">
            <!-- El contenido dinámico se inserta aquí -->
        </div>

        <!-- Botones de Acción -->
        <div id="popupButtons" class="popup-buttons"></div>
    </div>
</div>
